<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#1D4851"
    android:orientation="vertical"
    android:padding="10dp">

    <EditText
        android:id="@+id/clubname"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:paddingLeft="60dp"
        android:paddingRight="45dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:ems="10"
        android:hint="Club's Username"
        android:inputType="textPersonName"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/imageView5"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/password"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:paddingLeft="60dp"
        android:paddingRight="45dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/clubname" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/login1"
        android:text="Log in"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="-10dp"
        android:layout_below="@+id/password"
        android:layout_toEndOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/password"
        android:layout_alignTop="@+id/password"
        app:srcCompat="@drawable/keysymbol" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="100dp"
        app:srcCompat="@drawable/icon" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Copyrights Reserved..."
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/clubname"
        android:layout_alignEnd="@+id/imageView3"
        android:paddingBottom="9dp"
        app:srcCompat="@drawable/mailicon" />

</RelativeLayout>
